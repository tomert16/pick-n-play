####### api #######
# Ignore bundler config.
server/.bundle

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
server/log/*
server/tmp/*
!/server/log/.keep
!/server/tmp/.keep

# Ignore pidfiles, but keep the directory.
server/tmp/pids/*
!/server/tmp/pids/
!/server/tmp/pids/.keep

# Ignore uploaded fdockeriles in development.
server/storage/*
!/server/storage/.keep
server/tmp/storage/*
!/server/tmp/storage/
!/server/tmp/storage/.keep

# Ignore master key for decrypting credentials and more.
server/config/master.key

server/.DS_Store
server/.byebug_history


